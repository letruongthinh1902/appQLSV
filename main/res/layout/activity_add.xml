<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#AA98AE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:fontFamily="serif"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="#F4E34B"
            android:gravity="center"
            android:text="Information Student "
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:background="@drawable/border_layout"
        >

        <TextView
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_textview"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Name"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edt_hoten"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:background="@drawable/border_layout"
        >

        <TextView
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_textview"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Gender"
            android:textSize="20dp" />
        <LinearLayout
            android:background="#009688"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/rg_gioitinh"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/rb_nam"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:checked="true"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nam"
                    />
                <RadioButton
                    android:id="@+id/rb_nu"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ná»¯"
                    />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:background="@drawable/border_layout"
        >

        <TextView
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_textview"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Email"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edit_email"
            android:layout_weight="2"
            android:textSize="20dp"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:background="@drawable/border_layout"
        >

        <TextView
            android:layout_width="179dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_textview"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Phone"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edt_dienthoai"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009688"
            />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:background="#2D3667"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:text="More"
            app:backgroundTint="#F44336" />

        <Button
            android:id="@+id/btn_thoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_layout"
            android:text="Out"
            app:backgroundTint="#F44336" />
    </LinearLayout>


</LinearLayout>